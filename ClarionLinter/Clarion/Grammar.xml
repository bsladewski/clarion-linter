<?xml version="1.0" encoding="utf-8" ?>
<grammar>
  <!-- Statements, a sequence of statements -->
  <termDef name="statements">
    <sequence>
      <term name="statement"/>
      <term name="input-end"/>
    </sequence>
    <sequence>
      <term name="statements"/>
      <term name="statements"/>
    </sequence>
  </termDef>
  <!-- Statement, any single line or block of code -->
  <termDef name="statement">
    <term name="if"/>
    <term name="loop"/>
    <term name="assignment"/>
    <term name="procedure-call"/>
    <sequence>
      <terminal name="DO"/>
      <terminal type="identifier"/>
    </sequence>
  </termDef>
  <!-- If, conditionally executes a series of statements -->
  <termDef name="if">
    <sequence>
      <terminal name="IF"/>
      <term name="expression"/>
      <term name="input-end"/>
      <term name="statements"/>
      <term name="end"/>
    </sequence>
    <sequence>
      <terminal name="IF"/>
      <term name="expression"/>
      <terminal name="THEN"/>
      <term name="statement"/>
      <term name="end"/>
    </sequence>
  </termDef>
  <!-- Loop, executes a series of statements multiple times -->
  <termDef name="loop">
    <sequence>
      <terminal name="LOOP"/>
      <term name="assignment"/>
      <terminal name="TO"/>
      <term name="expression"/>
      <term name="input-end"/>
      <term name="statements"/>
      <term name="end"/>
    </sequence>
    <sequence>
      <terminal name="LOOP"/>
      <terminal name="UNTIL"/>
      <term name="expression"/>
      <term name="input-end"/>
      <term name="statements"/>
      <term name="end"/>
    </sequence>
  </termDef>
  <!-- Assignment, assigns the result of an expression to an identifier -->
  <termDef name="assignment">
    <sequence>
      <terminal type="identifier"/>
      <term name="assignment-op"/>
      <term name="expression"/>
    </sequence>
  </termDef>
  <!-- Procedure call, calling a procedure by its identifier with parameters -->
  <termDef name="procedure-call">
    <sequence>
      <terminal type="identifier"/>
      <terminal name="("/>
      <terminal name=")"/>
    </sequence>
    <sequence>
      <terminal type="identifier"/>
      <terminal name="("/>
      <term name="parameter-list"/>
      <terminal name=")"/>
    </sequence>
  </termDef>
  <!-- Parameter list, comma separated parameters passed to a procedure -->
  <termDef name="parameter-list">
    <term name="expression"/>
    <sequence>
      <term name="parameter-list"/>
      <terminal name=","/>
      <term name="parameter-list"/>
    </sequence>
  </termDef>
  <!-- Expression, complex combinations of values that evaluate to a single value -->
  <termDef name="expression">
    <term name="value"/>
    <term name="procedure-call"/>
    <sequence>
      <terminal name="("/>
      <term name="expression"/>
      <terminal name=")"/>
    </sequence>
    <sequence>
      <term name="expression"/>
      <term name="conjunction"/>
      <term name="expression"/>
    </sequence>
  </termDef>
  <!-- Assignment Op, any operator that assigns a value to a label -->
  <termDef name="assignment-op">
    <terminal name="="/>
    <terminal name=":=:"/>
    <terminal name="&amp;="/>
  </termDef>
  <!-- Conjunction, any operator that combines two values -->
  <termDef name="conjunction">
    <terminal name="*"/>
    <terminal name="^"/>
    <terminal name="/"/>
    <terminal name="-"/>
    <terminal name="+"/>
    <terminal name="%"/>
    <terminal name="AND"/>
    <terminal name="OR"/>
    <terminal name="XOR"/>
    <terminal name="="/>
    <terminal name="&lt;&gt;"/>
  </termDef>
  <!-- Value, express a single value -->
  <termDef name="value">
    <terminal name="NULL"/>
    <terminal type="identifier"/>
    <terminal type="literal"/>
    <sequence>
      <term name="operation"/>
      <term name="value"/>
    </sequence>
  </termDef>
  <!-- Operation, any unary operation -->
  <termDef name="operation">
    <terminal name="NOT"/>
    <terminal name="~"/>
  </termDef>
  <!-- End, the end of a code block -->
  <termDef name="end">
    <terminal name="END"/>
    <terminal name="."/>
  </termDef>
  <!-- Input End, indicates the end of a line or input -->
  <termDef name="input-end">
    <terminal name="EOL"/>
    <terminal name="EOF"/>
  </termDef>
</grammar>
